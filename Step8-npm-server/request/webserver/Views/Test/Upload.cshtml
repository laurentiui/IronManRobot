@model webserver.Controllers.TestModel
@{
    ViewData["Title"] = "Home Page";
}

    <h1>This is a test for upload files</h1>

    <hr/>

    <form method="post" action="Upload" enctype="multipart/form-data">

        <div class="row">
            <div class="col-sm-12 alert-danger">
                @Model.Error
            </div>
        </div>

        <br/><br/>

        <div class="row">
            <div class="col-sm-12">
                @Model.FileName
            </div>
        </div>
        
        <div class="row">
            

                <div class="col-sm-2">
                    Upload file here
                </div>
                <div class="col-sm-8">
                    
                        <input type="file" name="fileToUpload" />
                    
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Do upload!"/>
                </div>

            
        </div>

    </form>

    

